<?xml version="1.0" encoding="utf-8"?><!--好价item基础样式，请include到自己布局里，不要直接使用-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#f5f5f5"

    >

    <android.support.v7.widget.CardView xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        cardView:cardCornerRadius="2dp"
        cardView:cardElevation="0dp"
        cardView:cardMaxElevation="0dp"
        cardView:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/card_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"

        android:layout_toRightOf="@id/cv_pic"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        android:maxLines="2"
        android:textColor="@color/color333"
        android:textSize="14dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_title"
        android:layout_toRightOf="@id/cv_pic"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingRight="5dp"
        android:textColor="@color/product_color"
        android:textSize="14dp" />
</RelativeLayout>